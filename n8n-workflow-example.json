{
  "name": "WhatsApp CRM Integration - Complete",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "whatsapp-incoming",
        "responseMode": "onReceived",
        "options": {}
      },
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "whatsapp-crm"
    },
    {
      "parameters": {
        "url": "http://localhost:5000/api/webhooks/whatsapp/incoming",
        "method": "POST",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "contentType": "json",
        "bodyParameters": {
          "parameters": [
            {
              "name": "phoneNumber",
              "value": "={{ $json.from || $json.phoneNumber }}"
            },
            {
              "name": "content",
              "value": "={{ $json.body || $json.content }}"
            },
            {
              "name": "type",
              "value": "text"
            },
            {
              "name": "customerName",
              "value": "={{ $json.name || $json.customerName }}"
            }
          ]
        },
        "options": {
          "timeout": 10000
        }
      },
      "name": "Send to CRM Backend",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [500, 300]
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Send to CRM Backend",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  }
}
