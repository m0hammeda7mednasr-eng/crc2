{
  "name": "CRM to WhatsApp - Send Messages",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "send-whatsapp",
        "responseMode": "onReceived",
        "options": {}
      },
      "name": "Webhook من CRM",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "crm-send-whatsapp"
    },
    {
      "parameters": {
        "url": "https://api.whatsapp.com/send",
        "method": "POST",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer YOUR_WHATSAPP_API_TOKEN"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "to",
              "value": "={{ $json.phoneNumber }}"
            },
            {
              "name": "message",
              "value": "={{ $json.content }}"
            },
            {
              "name": "type",
              "value": "={{ $json.type || 'text' }}"
            }
          ]
        },
        "options": {
          "timeout": 10000
        }
      },
      "name": "إرسال للواتساب",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [500, 300],
      "notes": "غير الـ URL حسب خدمة الواتساب اللي بتستخدمها (Twilio, WhatsApp Business API, etc.)"
    }
  ],
  "connections": {
    "Webhook من CRM": {
      "main": [
        [
          {
            "node": "إرسال للواتساب",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  }
}
